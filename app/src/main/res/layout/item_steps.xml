<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:background="#D7CCC8"
    android:layout_gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/cicle"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_steps_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="20sp"
                android:text="10"/>
        </LinearLayout>
        <TextView
            android:id="@+id/item_steps_name"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_marginLeft="4dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000"
            android:text="Vất cả chai mắm xuống giếng xong lọc lại mắm để làm gia vị"/>
        <TextView
            android:id="@+id/item_steps_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="right"
            android:textColor="#DD2C00"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="200"/>
        <TextView
            android:id="@+id/item_steps_unit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingLeft="4dp"
            android:layout_height="wrap_content"
            android:textColor="#DD2C00"
            android:textSize="14sp"
            android:text="phút"/>
        <ImageView
            android:id="@+id/item_steps_img"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="fitXY"
            android:src="@drawable/imgcooked"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:background="#F4511E"
        android:layout_height="1dp"></View>
</LinearLayout>