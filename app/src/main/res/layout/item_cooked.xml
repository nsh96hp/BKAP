<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/item_imagecook"
        android:layout_margin="@dimen/item_cooked_layout_margin"
        android:layout_width="@dimen/item_cooked_layout_width"
        android:layout_height="@dimen/item_cooked_layout_height"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/imgcooked"/>
    <TextView
        android:id="@+id/item_namecook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:textColor="#000"
        android:text="Ẩm thực Việt Nam"/>

</LinearLayout>