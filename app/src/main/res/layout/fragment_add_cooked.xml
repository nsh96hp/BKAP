<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.test.cookcook.ui.defaultCooked.addCooked.AddCookedFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/add_img_food"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:scaleType="fitXY"
                    android:padding="4dp"
                    android:src="@drawable/foodd_bg" />
                <ImageButton
                    android:id="@+id/add_img_cooked"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_camera"
                    android:src="@drawable/ic_camera" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Đăng ảnh món ăn"
                    android:textColor="#1A237E" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:text="Hãy chọn hình ảnh của chính bạn!"
                    android:textColor="#F44336"
                    android:textSize="12sp"
                    android:textStyle="italic" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/add_name_cooked"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#EFEBE9"
                        android:hint="Tên món..." />

                    <EditText
                        android:id="@+id/add_intro_cooked"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="#EFEBE9"
                        android:hint="Giới thiệu món..." />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="#A1887F"
                        android:text="Nguyên Liệu"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/add_rc_ingre"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>
                    <ImageButton
                        android:id="@+id/add_add_ingre"
                        android:layout_gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_add_cooked"
                        android:background="#fff"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="4"
                            android:layout_height="wrap_content"
                            android:textStyle="italic"
                            android:textSize="16sp"
                            android:textColor="#FF5722"
                            android:text="Chuẩn bị cho bao nhiêu người ăn?"/>

                        <EditText
                            android:id="@+id/add_num"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:hint="1"
                            android:inputType="number" />
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="#A1887F"
                        android:text="Bước Thực Hiện"
                        android:textColor="#fff"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/add_rc_steps"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </android.support.v7.widget.RecyclerView>
                    <ImageButton
                        android:id="@+id/add_add_steps"
                        android:layout_gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_add_cooked"
                        android:background="#fff"/>
                    <View
                        android:layout_marginTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#A5D6A7"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/add_btn_save"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="30dp"
                            android:layout_marginRight="12dp"
                            android:textColor="#fff"
                            android:background="#757575"
                            android:text="Lưu"
                            />
                        <Button
                            android:id="@+id/add_btn_up"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="30dp"
                            android:textColor="#fff"
                            android:background="#FF3D00"
                            android:text="Đăng lên"
                            />
                    </LinearLayout>
                    <View
                        android:layout_marginBottom="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#A5D6A7"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>
